<h1>User Page</h1>
<p>User Email: <%= @user.email %></p>
<% if @user.is_restaurant_owner %>
<%= link_to("Create Restaurant", new_user_restaurant_path(@user)) %>
<%= link_to("View Reservations", user_reservations_path(@user)) %>
<%= link_to("Reservation List",  user_reservations_path(@user)) %>
<ul>
  <% @restaurants.each do |restaurant| %>
  <li><%= restaurant.name  %>
    <%= link_to("Edit", edit_user_restaurant_path(@user,restaurant)) %>
  </li>
  <% end %>
</ul>
<p><%= link_to("Category List", categories_path) %></p>
<% end %>